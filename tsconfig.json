{
  "compilerOptions": {
    "baseUrl": "./",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "lib": ["es5", "es6", "es2019", "dom"],
    "allowJs": false,
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*", "*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "scripts",
    "coverage",
    "webpack*"
  ]
}
