{
  "rootDir": "../../",
  "collectCoverageFrom": [
    "**/src/**/.{js,jsx,ts,tsx}",
    "**/src/**",
    "**/scripts/**",
    "!**/src/domain/**",
    "!**/__snapshots__/**",
    "!**/*index.{js,jsx,ts,tsx}",
    "!**/src/redux/modules/root.ts",
    "!**/scripts/*.json"
  ],
  "transform": {
    "^.+\\.(j|t)sx?$": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/config/test/jest-setup.ts"],
  "moduleNameMapper": {
    "\\.(css|scss)$": "<rootDir>/config/test/identityProxy.ts"
  },
  "moduleDirectories": ["node_modules", "src", "public", "scripts"],
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "json"]
}
